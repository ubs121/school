<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.Toolbar {
			background-color: silver;
			width: 100%;
			text-align: left;
		}
	</ui:style>
	<g:HorizontalPanel ui:field="toolbar2" styleName="{style.Toolbar}" height="">
		<g:HorizontalPanel>
			<g:PushButton ui:field="insert_choice" height="20px"
				width="20px" title="Хариулах сонголт нэмэх">
				<g:upFace>
					<img src="images/insertchoice.png" />
				</g:upFace>
			</g:PushButton>
			<g:PushButton ui:field="change_select_mode" height="20px"
				width="20px" title="Олон сонголттой/Нэг сонголттой горимд солих">
				<g:upFace>
					<img src="images/changeselectmode.png" />
				</g:upFace>
			</g:PushButton>
			<g:PushButton ui:field="insert_fillbox" height="20px"
				width="20px" title="Бөглөх хайрцаг">
				<g:upFace>
					<img src="images/insertfillbox.png" />
				</g:upFace>
			</g:PushButton>
			<g:ToggleButton ui:field="bold" height="20px" width="20px"
				title="Зузаан">
				<g:upFace>
					<img src="images/bold.png" />
				</g:upFace>
			</g:ToggleButton>
			<g:ToggleButton ui:field="italic" height="20px" width="20px"
				title="Налуу">
				<g:upFace>
					<img src="images/italic.png" />
				</g:upFace>
			</g:ToggleButton>
			<g:ToggleButton ui:field="underline" height="20px"
				width="20px" title="Доогуур зураас">
				<g:upFace>
					<img src="images/underline.png" />
				</g:upFace>
			</g:ToggleButton>
			<g:ListBox ui:field="fonts"></g:ListBox>
			<g:ListBox ui:field="colors"></g:ListBox>
			<g:ToggleButton ui:field="stroke" height="20px" width="20px"
				title="Дундуур зураас">
				<g:upFace>
					<img src="images/stroke.png" />
				</g:upFace>
			</g:ToggleButton>
			<g:ToggleButton ui:field="subscript" height="20px"
				width="20px" title="Зэрэгт">
				<g:upFace>
					<img src="images/subscript.png" />
				</g:upFace>
			</g:ToggleButton>
			<g:ToggleButton ui:field="superscript" height="20px"
				width="20px" title="Индекс">
				<g:upFace>
					<img src="images/superscript.png" />
				</g:upFace>
			</g:ToggleButton>
			<g:PushButton ui:field="align_left" height="20px" width="20px"
				title="Зүүн байрлуулах">
				<g:upFace>
					<img src="images/alignleft.png" />
				</g:upFace>
			</g:PushButton>
			<g:PushButton ui:field="align_middle" height="20px"
				width="20px" title="Голлуулах">
				<g:upFace>
					<img src="images/aligncenter.png" />
				</g:upFace>
			</g:PushButton>
			<g:PushButton ui:field="align_right" height="20px" width="20px"
				title="Баруун байрлуулах">
				<g:upFace>
					<img src="images/alignright.png" />
				</g:upFace>
			</g:PushButton>
			<g:PushButton ui:field="order_list" height="20px" width="20px"
				title="Эрэмбэтэй жагсаалт">
				<g:upFace>
					<img src="images/orderlist.png" />
				</g:upFace>
			</g:PushButton>
			<g:PushButton ui:field="unorder_list" height="20px"
				width="20px" title="Эрэмбэгүй жагсаалт">
				<g:upFace>
					<img src="images/unorderlist.png" />
				</g:upFace>
			</g:PushButton>
			<g:PushButton ui:field="indent_right" height="20px"
				width="20px" title="Догол ахиулах">
				<g:upFace>
					<img src="images/indentright.png" />
				</g:upFace>
			</g:PushButton>
			<g:PushButton ui:field="indent_left" height="20px" width="20px"
				title="Догол хасах">
				<g:upFace>
					<img src="images/indentleft.png" />
				</g:upFace>
			</g:PushButton>
			<g:PushButton ui:field="insert_line" height="20px" width="20px"
				title="Шулуун оруулах">
				<g:upFace>
					<img src="images/insertline.png" />
				</g:upFace>
			</g:PushButton>
			<g:PushButton ui:field="insert_image" height="20px"
				width="20px" title="Зураг оруулах">
				<g:upFace>
					<img src="images/insertimage.png" />
				</g:upFace>
			</g:PushButton>
			<g:PushButton ui:field="remove_formatting" height="20px"
				width="20px" title="Форматыг арилгах">
				<g:upFace>
					<img src="images/removeformatting.png" />
				</g:upFace>
			</g:PushButton>
			<g:ToggleButton ui:field="texthtml" height="20px"
				width="20px" title="HTML кодыг харах">
				<g:upFace>
					<img src="images/texthtml.png" />
				</g:upFace>
			</g:ToggleButton>

		</g:HorizontalPanel>
	</g:HorizontalPanel>
</ui:UiBinder> 