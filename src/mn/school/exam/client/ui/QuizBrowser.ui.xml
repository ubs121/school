<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:e="urn:import:mn.goody.exam.client.view">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel width="90em" height="50em">
		<g:HTML>
			<h2>&bull; Асуулт бэлтгэх</h2>
			<hr />
		</g:HTML>
		<g:HorizontalSplitPanel splitPosition="17%"
			width="90em" height="50em">
			<!-- Сэдвийн мод -->
			<e:TopicTree ui:field="topicTree"></e:TopicTree>
			<g:VerticalPanel>
				<!-- Асуултын хэрэгсэл -->
				<e:QuizListToolbar ui:field="quizListToolbar" />
				<g:HorizontalPanel>
					<!-- Асуултын жагсаалт -->
					<e:QuizList ui:field="quizList" width='300px' />
					<!-- Асуултын засварлах цонх -->
					<e:EditQuizView ui:field="quizEditor" visible='false' />
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:HorizontalSplitPanel>
	</g:HTMLPanel>
</ui:UiBinder> 